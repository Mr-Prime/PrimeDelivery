<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4.0dp"
    android:layout_marginTop="4.0dp">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15.3dp"
            android:layout_marginRight="15.3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginRight="15.3dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.8">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/title_tv"
                    android:fontFamily="@font/my_roboto_reg"
                    android:layout_height="wrap_content"
                    android:text="Santushti Smoothies and Shakes"
                    android:textColor="#0d0e15"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="North Indian"
                    android:id="@+id/style_tv"
                    android:textColor="#777779"
                    android:textSize="15dp" />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fatehgunj"
                    android:id="@+id/place_tv"
                    android:textColor="#90959f"
                    android:textSize="15dp" />

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:background="#cccccc"
                    android:layout_height="1dp"/>

                <FrameLayout
                    android:id="@+id/frame_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recyclerview_oofer"
                    android:paddingBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:id="@+id/filters"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_rate" />
                            <TextView
                                android:id="@+id/ratings_tv"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:fontFamily="@font/my_roboto_med"
                                android:textColor="#1c1a2f"
                                android:letterSpacing="0.02"
                                android:text="4.6"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/time_tv"
                            android:textSize="13sp"
                            android:fontFamily="@font/my_roboto_reg"
                            android:textColor="#777779"
                            android:letterSpacing="0.02"
                            android:text="Deliver in 20 min."
                            />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>


    </LinearLayout>


</RelativeLayout>